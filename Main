  <script>
    /*
      ====== FUNCTIONAL NOTES (JavaScript) ======
      This script does:
        1) Switches between the tab panels when you click a tab button
        2) Updates the footer year automatically
        3) Saves the last-opened tab in your browser (localStorage)

      HOW TO EDIT:
        - If you add a new tab:
          a) Add a new button with data-tab="tab4"
          b) Add a new <section id="tab4" class="panel">...</section>
          c) Done. The script will handle it automatically.
    */

    const tabButtons = document.querySelectorAll(".tab-btn");
    const panels = document.querySelectorAll(".panel");
    const STORAGE_KEY = "mySite.activeTab";

    function setActiveTab(tabId) {
      // Hide all panels, show only the selected one
      panels.forEach(p => p.classList.toggle("active", p.id === tabId));

      // Update button accessibility states
      tabButtons.forEach(btn => {
        const isActive = btn.dataset.tab === tabId;
        btn.setAttribute("aria-selected", String(isActive));
      });

      // Remember chosen tab (so refresh keeps your place)
      try { localStorage.setItem(STORAGE_KEY, tabId); } catch (_) {}
    }

    // Click handlers
    tabButtons.forEach(btn => {
      btn.addEventListener("click", () => setActiveTab(btn.dataset.tab));
    });

    // Restore last-opened tab (if any)
    try {
      const saved = localStorage.getItem(STORAGE_KEY);
      if (saved && document.getElementById(saved)) setActiveTab(saved);
    } catch (_) {}

    // Footer year
    document.getElementById("year").textContent = new Date().getFullYear();
  </script>
</body>
